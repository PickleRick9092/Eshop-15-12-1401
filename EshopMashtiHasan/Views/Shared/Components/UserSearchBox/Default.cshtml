@model Security.Domain.DTO.User.UserSearchModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Default" id="frmUserSearchBox">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label" ></label>
                <input asp-for="UserName" class="form-control" id="UserNameChange" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" id="FirstNameChange"/>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" id="LastName"/>
            </div>
            <div class="form-group">
                <label asp-for="RoleID" class="control-label"></label>
                <select asp-items="@ViewBag.drpRole" class="form-control" asp-for="RoleID" id="RoleIDChange"></select>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" id="Mobile"/>
            </div>
        </form>
    </div>
</div>
